<div class="container py-5">
    <!-- Thai sản -->
    <h3 class="mb-4 fw-bold text-primary"><i class="bi bi-person-heart me-2"></i>Chuyên gia Thai sản</h3>
    <div id="obExpertList" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"></div>

    <!-- Tâm lý -->
    <h3 class="mt-5 mb-4 fw-bold text-primary"><i class="bi bi-person-heart me-2"></i>Chuyên gia Tâm lý</h3>
    <div id="psyExpertList" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"></div>
</div>

<!-- Modal xem hồ sơ chuyên gia -->
<div class="modal fade" id="expertModal" tabindex="-1" aria-labelledby="expertModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="expertModalLabel">Thông tin chuyên gia</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex">
                    <img id="modalAvatar" src="" class="rounded-circle me-4" style="width:100px;height:100px;" />
                    <div>
                        <h5 class="fw-bold text-primary" id="modalFullName"></h5>
                        <p class="mb-1 text-success fw-bold" id="modalAcademicTitle"></p>
                        <p class="mb-1 text-muted" id="modalPosition"></p>
                        <p class="mb-1 text-muted" id="modalSpecialization"></p>
                        <p class="mb-1 text-muted" id="modalOrganization"></p>
                    </div>
                </div>
                <hr />
                <p id="modalDescription" class="text-dark mt-3"></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.userRole = @User.IsInRole("User").ToString().ToLower();
    </script>
    <script src="~/js/view/friends.js"></script>
}