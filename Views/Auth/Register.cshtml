@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Đăng ký";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
                    <h3 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Đăng ký Gentle Blossom</h3>
                </div>
                <div class="card-body p-5">
                    <form id="registerForm" asp-action="Register" asp-controller="Auth" method="post" novalidate>
                        <div class="mb-4">
                            <label for="fullName" class="form-label fw-bold">
                                <i class="bi bi-person-fill me-2 text-primary"></i>Họ và tên
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-person-circle text-primary"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 rounded-end-3" id="fullName"
                                       name="FullName" required placeholder="Nhập họ và tên" style="border-color: #0dcaf0;">
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng nhập họ và tên.
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="email" class="form-label fw-bold">
                                <i class="bi bi-envelope-fill me-2 text-primary"></i>Email
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-envelope-at text-primary"></i>
                                </span>
                                <input type="email" class="form-control border-start-0 rounded-end-3" id="email"
                                       name="Email" required placeholder="Nhập email" style="border-color: #0dcaf0;">
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng nhập email hợp lệ.
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="phoneNumber" class="form-label fw-bold">
                                <i class="bi bi-telephone-fill me-2 text-primary"></i>Số điện thoại
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-telephone text-primary"></i>
                                </span>
                                <input type="tel" class="form-control border-start-0 rounded-end-3" id="phoneNumber"
                                       name="PhoneNumber" required placeholder="Nhập số điện thoại" pattern="[0-9]{10}" style="border-color: #0dcaf0;">
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng nhập số điện thoại hợp lệ (10 số).
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="dateOfBirth" class="form-label fw-bold">
                                <i class="bi bi-calendar-fill me-2 text-primary"></i>Ngày sinh
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-calendar-date text-primary"></i>
                                </span>
                                <input type="date" class="form-control border-start-0 rounded-end-3" id="dateOfBirth"
                                       name="BirthDate" required style="border-color: #0dcaf0;">
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng chọn ngày sinh.
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="gender" class="form-label fw-bold">
                                <i class="bi bi-gender-ambiguous me-2 text-primary"></i>Giới tính
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-gender-male text-primary"></i>
                                </span>
                                <select class="form-select border-start-0 rounded-end-3" id="gender" name="Gender" required style="border-color: #0dcaf0;">
                                    <option value="" disabled selected>Chọn giới tính</option>
                                    <option value="true">Nam</option>
                                    <option value="false">Nữ</option>
                                </select>
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng chọn giới tính.
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="username" class="form-label fw-bold">
                                <i class="bi bi-person-badge-fill me-2 text-primary"></i>Tên đăng nhập
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-person-badge text-primary"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 rounded-end-3" id="username"
                                       name="UserName" required placeholder="Nhập tên đăng nhập" style="border-color: #0dcaf0;">
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng nhập tên đăng nhập (tối thiểu 4 ký tự).
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label fw-bold">
                                <i class="bi bi-key-fill me-2 text-primary"></i>Mật khẩu
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-shield-lock text-primary"></i>
                                </span>
                                <input type="password" class="form-control border-start-0 rounded-end-3" id="password"
                                       name="Password" required placeholder="Nhập mật khẩu" style="border-color: #0dcaf0;">
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng nhập mật khẩu (tối thiểu 8 ký tự).
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label fw-bold">
                                <i class="bi bi-key-fill me-2 text-primary"></i>Xác nhận mật khẩu
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                                    <i class="bi bi-shield-lock text-primary"></i>
                                </span>
                                <input type="password" class="form-control border-start-0 rounded-end-3" id="confirmPassword"
                                       name="ConfirmPassword" required placeholder="Xác nhận mật khẩu" style="border-color: #0dcaf0;">
                            </div>
                            <div class="invalid-feedback">
                                Mật khẩu xác nhận không khớp.
                            </div>
                        </div>
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 py-2"
                                    style="background-color: #0dcaf0; border-color: #0dcaf0;">
                                <i class="bi bi-person-check-fill me-2"></i>Đăng ký
                            </button>
                        </div>
                        <div class="text-center">
                            <p class="mb-2">
                                Đã có tài khoản?
                                <a href="/Auth/Login" class="text-decoration-none fw-bold"
                                   style="color: #198754;">Đăng nhập ngay</a>
                            </p>
                            <p class="mb-0">
                                Quên mật khẩu?
                                <a href="/Auth/ForgotPassword" class="text-decoration-none fw-bold"
                                   style="color: #dc3545;">Khôi phục</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/Component/Modal.cshtml")

@section Scripts {
    <script>
        (function () {
            'use strict';
            var form = document.getElementById('registerForm');
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                event.stopPropagation();

                var username = document.getElementById('username').value;
                var password = document.getElementById('password').value;
                var confirmPassword = document.getElementById('confirmPassword').value;
                var phoneNumber = document.getElementById('phoneNumber').value;
                var dateOfBirth = document.getElementById('dateOfBirth').value;

                // Kiểm tra tên đăng nhập
                if (username.length < 4) {
                    document.getElementById('username').classList.add('is-invalid');
                    showErrorModal("Tên đăng nhập phải có ít nhất 4 ký tự!", 3000);
                    return;
                }

                // Kiểm tra mật khẩu
                if (password.length < 8) {
                    document.getElementById('password').classList.add('is-invalid');
                    showErrorModal("Mật khẩu phải có ít nhất 8 ký tự!", 3000);
                    return;
                }

                // Kiểm tra xác nhận mật khẩu
                if (password !== confirmPassword) {
                    document.getElementById('confirmPassword').classList.add('is-invalid');
                    showErrorModal("Mật khẩu xác nhận không khớp!", 3000);
                    return;
                }

                // Kiểm tra số điện thoại
                if (!phoneNumber.match(/^[0-9]{10}$/)) {
                    document.getElementById('phoneNumber').classList.add('is-invalid');
                    showErrorModal("Số điện thoại phải có 10 số!", 3000);
                    return;
                }

                // Kiểm tra ngày sinh (không cho phép ngày tương lai)
                var today = new Date();
                var dob = new Date(dateOfBirth);
                if (dob > today) {
                    document.getElementById('dateOfBirth').classList.add('is-invalid');
                    showErrorModal("Ngày sinh không được là ngày trong tương lai!", 3000);
                    return;
                }

                if (form.checkValidity()) {
                    $.ajax({
                        url: form.action,
                        method: form.method,
                        data: $(form).serialize(),
                        success: function (response) {
                            if (response.success) {
                                showSuccessModal("Đăng ký thành công!");
                                setTimeout(function () {
                                    window.location.href = "/Auth/Login";
                                }, 2000);
                            } else {
                                showErrorModal(response.message);
                            }
                        },
                        error: function (xhr) {
                            $('#main-content').html(
                                `<div class="alert alert-danger p-3">Lỗi: ${xhr.responseText || 'Đăng ký thất bại!'}</div>`
                            );
                        }
                    });
                }

                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}