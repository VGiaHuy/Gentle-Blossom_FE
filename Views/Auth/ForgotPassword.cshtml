@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Quên Mật Khẩu";
}

<div class="container">
    <div class="card shadow-lg p-4 mx-auto my-5" style="max-width: 450px;">
        <h2 class="text-center mb-4 fw-bold">Quên Mật Khẩu</h2>
        <form id="forgotPasswordForm">
            <div class="mb-3" id="sendUsername">
                <div class="mb-3">
                    <label for="username" class="form-label fw-medium">Tên đăng nhập</label>
                    <input type="text" class="form-control form-control-lg rounded-3" id="username" placeholder="Nhập tên đăng nhập" autocomplete="off">
                </div>
                <button type="button" class="btn btn-primary w-100 btn-lg rounded-3" id="sendUsernameBtn" onclick="sendUsername()">
                    <span class="button-text">Gửi</span>
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
            </div>

            <div id="otpSection" class="d-none mt-3">
                <div class="mb-3">
                    <label for="otp" class="form-label fw-medium">Mã OTP</label>
                    <input type="text" class="form-control form-control-lg rounded-3" id="otp" placeholder="Nhập mã OTP" autocomplete="off">
                </div>
                <button type="button" class="btn btn-success w-100 btn-lg rounded-3" id="verifyOtpBtn" onclick="verifyOTP()">
                    <span class="button-text">Gửi OTP</span>
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
            </div>

            <div id="changePassword" class="d-none mt-3">
                <div class="mb-3">
                    <label for="password" class="form-label fw-medium">Mật khẩu mới</label>
                    <input type="password" class="form-control form-control-lg rounded-3" id="newPassword" placeholder="Nhập mật khẩu mới" autocomplete="off">
                </div>
                <button type="button" class="btn btn-success w-100 btn-lg rounded-3" id="changePasswordBtn" onclick="changePassword()">
                    <span class="button-text">Xác nhận</span>
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        let isSending = false;
        let email = null;

        function setButtonLoading(buttonId, isLoading) {
            const button = document.getElementById(buttonId);
            const buttonText = button.querySelector('.button-text');
            const spinner = button.querySelector('.spinner-border');

            if (isLoading) {
                button.disabled = true;
                buttonText.classList.add('d-none');
                spinner.classList.remove('d-none');
            } else {
                button.disabled = false;
                buttonText.classList.remove('d-none');
                spinner.classList.add('d-none');
            }
        }

        // Hàm sendUsername
        async function sendUsername() {
            if (isSending) return;
            isSending = true;
            setButtonLoading('sendUsernameBtn', true);

            const username = document.getElementById('username').value.trim();
            const sendUsernameSection = document.getElementById('sendUsername');
            const otpSection = document.getElementById('otpSection');

            if (!username) {
                showErrorModal('Vui lòng nhập tên đăng nhập');
                setButtonLoading('sendUsernameBtn', false);
                isSending = false;
                return;
            }

            try {
                const response = await fetch('@Url.Action("ForgotPasswordRequest", "Auth")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username })
                });

                const result = await response.json();
                console.log(result);

                if (response.ok) {
                    otpSection.classList.remove('d-none');
                    sendUsernameSection.classList.add('d-none');
                    showInfoModal('Mã OTP đã được gửi đến email ' + result.message, 6000);
                } else {
                    showErrorModal(result.message || 'Có lỗi xảy ra, vui lòng thử lại');
                }
            } catch (error) {
                showErrorModal('Lỗi kết nối đến server');
                console.error('Error:', error);
            } finally {
                setButtonLoading('sendUsernameBtn', false);
                isSending = false;
            }
        }

        // Hàm verifyOTP
        function verifyOTP() {
            const otp = document.getElementById('otp').value.trim();
            const otpSection = document.getElementById('otpSection');
            const changePasswordSection = document.getElementById('changePassword');

            if (!otp) {
                showErrorModal('Vui lòng nhập mã OTP');
                return;
            }
            setButtonLoading('verifyOtpBtn', true);

            $.ajax({
                url: '@Url.Action("VerifyOTP", "Auth")',
                type: 'POST',
                data: { otp },
                success: function (result) {
                    if (result.success) {
                        email = result.data;
                        changePasswordSection.classList.remove('d-none');
                        otpSection.classList.add('d-none'); // Sửa: Thêm d-none đúng cách
                        showSuccessModal('Xác thực OTP thành công! Bạn hãy tiếp tục đặt lại mật khẩu.');
                    } else {
                        showErrorModal(result.message || 'Mã OTP không đúng, vui lòng thử lại');
                    }
                },
                error: function (xhr, status, error) {
                    setButtonLoading('verifyOtpBtn', false);
                    showErrorModal('Lỗi kết nối đến server');
                    console.error('Error:', error);
                }
            });
        }

        // Hàm changePassword
        function changePassword() {
            const newPassword = document.getElementById('newPassword').value.trim();
            const changePasswordSection = document.getElementById('changePassword');

            if (!newPassword) {
                showErrorModal('Vui lòng nhập mật khẩu mới');
                return;
            }

            setButtonLoading('changePasswordBtn', true);

            $.ajax({
                url: '@Url.Action("ChangePassword", "Auth")',
                type: 'POST',
                data: { password: newPassword, email },
                success: function (result) {
                    if (result.success) {
                        showSuccessModal('Mật khẩu được đổi thành công!');
                        changePasswordSection.classList.add('d-none');
                        setTimeout(function () {
                            window.location.href = "/Auth/Login";
                        }, 2000);
                    } else {
                        showErrorModal(result.message || 'Có lỗi xảy ra, vui lòng thử lại');
                    }
                },
                error: function (xhr, status, error) {
                    showErrorModal('Lỗi kết nối đến server');
                    console.error('Error:', error);
                    setButtonLoading('changePasswordBtn', false);
                }
            });
        }
    </script>
}