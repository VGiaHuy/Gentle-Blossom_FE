<div class="container-fluid my-5">
    <div class="row">
        <!-- Left: Chat Rooms List -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary bg-gradient text-white fw-bold">
                    Danh sách trò chuyện
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex align-items-center bg-primary-subtle">
                            <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                            <div>
                                <strong>Bs. Nguyễn Thị Lan</strong>
                                <p class="text-muted mb-0 small">Hôm nay, 10:30</p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                            <div>
                                <strong>Nhóm tư vấn tâm lý</strong>
                                <p class="text-muted mb-0 small">Hôm qua, 15:45</p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                            <div>
                                <strong>Bs. Trần Minh Anh</strong>
                                <p class="text-muted mb-0 small">10/04/2025</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Center: Chat Window -->
        <div class="col-lg-9 col-md-8 mb-4">
            <div class="card border-0 shadow">
                <div class="card-header bg-light bg-gradient d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                        <h5 class="mb-0">Bs. Nguyễn Thị Lan</h5>
                    </div>
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-info-circle"></i> Chi tiết
                    </button>
                </div>
                <div class="card-body" style="height: 400px; overflow-y: auto;">
                    <!-- Incoming Message -->
                    <div class="d-flex mb-3">
                        <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 30px; height: 30px;">
                        <div class="p-2 bg-light rounded">
                            <p class="mb-0">Chào bạn, tình hình sức khỏe tuần này thế nào?</p>
                            <small class="text-muted">10:30</small>
                        </div>
                    </div>
                    <!-- Outgoing Message -->
                    <div class="d-flex justify-content-end mb-3">
                        <div class="p-2 bg-primary text-white rounded">
                            <p class="mb-0">Mình thấy ổn, chỉ hơi mệt một chút.</p>
                            <small class="text-muted">10:32</small>
                        </div>
                    </div>
                    <!-- Attachment Message -->
                    <div class="d-flex mb-3">
                        <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 30px; height: 30px;">
                        <div class="p-2 bg-light rounded">
                            <p class="mb-0">Đây là kết quả siêu âm mới nhất:</p>
                            <img src="" alt="Attachment" class="img-fluid rounded">
                            <small class="text-muted">10:35</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <form asp-action="SendMessage" method="post" enctype="multipart/form-data">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập tin nhắn..." name="messageContent">
                            <input type="file" class="form-control d-none" id="attachment" name="attachment">
                            <label for="attachment" class="btn btn-outline-secondary">
                                <i class="bi bi-paperclip"></i>
                            </label>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>