<div class="container-fluid my-5">
    <div class="row">
        <!-- Left: Chat Rooms List -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-primary text-white fw-bold py-3 rounded-top-4" style="background-color: #0dcaf0;">
                    <i class="bi bi-chat-text-fill me-2"></i>Danh sách trò chuyện
                </div>
                <div class="card-body p-0">
                    <div class="input-group mb-3 p-3">
                        <span class="input-group-text bg-white border-end-0 rounded-start-3" style="border-color: #0dcaf0;">
                            <i class="bi bi-search text-primary"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 rounded-end-3"
                               placeholder="Tìm kiếm trò chuyện..." style="border-color: #0dcaf0;">
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex align-items-center py-3 bg-primary-subtle rounded-3 mx-3 mb-2">
                            <img src="" alt="Avatar" class="rounded-circle me-3" style="width: 45px; height: 45px;">
                            <div class="flex-grow-1">
                                <strong class="d-block">Bs. Nguyễn Thị Lan</strong>
                                <p class="text-muted mb-0 small">Hôm nay, 10:30</p>
                            </div>
                            <span class="badge bg-success rounded-circle" style="width: 10px; height: 10px;"></span>
                        </li>
                        <li class="list-group-item d-flex align-items-center py-3 rounded-3 mx-3 mb-2">
                            <img src="" alt="Avatar" class="rounded-circle me-3" style="width: 45px; height: 45px;">
                            <div class="flex-grow-1">
                                <strong class="d-block">Nhóm tư vấn tâm lý</strong>
                                <p class="text-muted mb-0 small">Hôm qua, 15:45</p>
                            </div>
                            <span class="badge bg-secondary rounded-circle" style="width: 10px; height: 10px;"></span>
                        </li>
                        <li class="list-group-item d-flex align-items-center py-3 rounded-3 mx-3 mb-2">
                            <img src="" alt="Avatar" class="rounded-circle me-3" style="width: 45px; height: 45px;">
                            <div class="flex-grow-1">
                                <strong class="d-block">Bs. Trần Minh Anh</strong>
                                <p class="text-muted mb-0 small">10/04/2025</p>
                            </div>
                            <span class="badge bg-secondary rounded-circle" style="width: 10px; height: 10px;"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Center: Chat Window -->
        <div class="col-lg-9 col-md-8 mb-4">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center py-3 rounded-top-4">
                    <div class="d-flex align-items-center">
                        <img src="" alt="Avatar" class="rounded-circle me-3" style="width: 45px; height: 45px;">
                        <div>
                            <h5 class="mb-0 fw-bold text-primary" style="color: #0dcaf0;">Bs. Nguyễn Thị Lan</h5>
                            <small class="text-muted">Đang hoạt động</small>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary btn-sm rounded-3" data-bs-toggle="tooltip"
                                title="Gọi video" style="border-color: #198754; color: #198754;">
                            <i class="bi bi-camera-video-fill"></i>
                        </button>
                        <button class="btn btn-outline-primary btn-sm rounded-3" data-bs-toggle="tooltip"
                                title="Gọi thoại" style="border-color: #198754; color: #198754;">
                            <i class="bi bi-telephone-fill"></i>
                        </button>
                        <button class="btn btn-outline-primary btn-sm rounded-3" data-bs-toggle="tooltip"
                                title="Thông tin chi tiết" style="border-color: #0dcaf0; color: #0dcaf0;">
                            <i class="bi bi-info-circle"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body" style="height: 500px; overflow-y: auto; background-color: #f8f9fa;">
                    <!-- Incoming Message -->
                    <div class="d-flex mb-3">
                        <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 35px; height: 35px;">
                        <div class="p-3 bg-light rounded-3" style="max-width: 70%;">
                            <p class="mb-0">Chào bạn, tình hình sức khỏe tuần này thế nào?</p>
                            <small class="text-muted d-block mt-1">10:30</small>
                        </div>
                    </div>
                    <!-- Outgoing Message -->
                    <div class="d-flex justify-content-end mb-3">
                        <div class="p-3 text-white rounded-3" style="background-color: #0dcaf0; max-width: 70%;">
                            <p class="mb-0">Mình thấy ổn, chỉ hơi mệt một chút.</p>
                            <small class="text-white d-block mt-1 text-end">10:32</small>
                        </div>
                    </div>
                    <!-- Attachment Message -->
                    <div class="d-flex mb-3">
                        <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 35px; height: 35px;">
                        <div class="p-3 bg-light rounded-3" style="max-width: 70%;">
                            <p class="mb-2">Đây là kết quả siêu âm mới nhất:</p>
                            <img src="" alt="Attachment" class="img-fluid rounded-3 mb-2">
                            <small class="text-muted d-block">10:35</small>
                        </div>
                    </div>
                    <!-- System Message -->
                    <div class="text-center mb-3">
                        <small class="text-muted bg-white px-3 py-1 rounded-3">Hôm nay</small>
                    </div>
                </div>
                <div class="card-footer bg-light p-3">
                    <form asp-action="SendMessage" method="post" enctype="multipart/form-data">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"
                                  style="border-color: #0dcaf0;">
                                <i class="bi bi-emoji-smile text-primary"></i>
                            </span>
                            <input type="text" class="form-control border-start-0 border-end-0"
                                   placeholder="Nhập tin nhắn..." name="messageContent" style="border-color: #0dcaf0;">
                            <input type="file" class="form-control d-none" id="attachment" name="attachment">
                            <label for="attachment" class="btn btn-outline-primary rounded-3"
                                   style="border-color: #0dcaf0; color: #0dcaf0;">
                                <i class="bi bi-paperclip"></i>
                            </label>
                            <button type="submit" class="btn btn-primary rounded-3"
                                    style="background-color: #0dcaf0; border-color: #0dcaf0;">
                                <i class="bi bi-send-fill"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>