                    </ul>
                </div>
            }
            else
            {
                <a class="nav-link justify-content-center btn-outline-soft rounded-4" title="Đăng nhập ngay!"
                   style="--btn-color: #198754; --btn-hover: #d1e7dd;"
                   asp-controller="Auth" asp-action="Login">
                    Đăng nhập
                </a>
            }
