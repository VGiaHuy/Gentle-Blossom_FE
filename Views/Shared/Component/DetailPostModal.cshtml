@using Gentle_Blossom_FE.Data.DTOs.UserDTOs
@model List<CommentPostDTOs>

<div class="modal fade" id="postDetailModal" tabindex="-1" aria-labelledby="postDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content rounded-4">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Nội dung bài viết (Điền qua JavaScript) -->
                <div id="postContent" class="mb-4 border border-1 border-primary rounded-4 p-3">
                    <div class="d-flex align-items-center mb-3">
                        <img id="postAvatar" src="" alt="Avatar" class="rounded-circle me-3" style="width: 50px; height: 50px;">
                        <div class="flex-grow-1">
                            <strong id="postAcademicTitle" class="d-block accademictitle" style="color: #198754;"></strong>
                            <strong id="postPosterName" class="d-block text-primary fw-bold" style="color: #0dcaf0;"></strong>
                            <p id="postCreatedDate" class="text-muted mb-0 small"></p>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm rounded-circle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots"></i>
                            </button>
                            <ul class="dropdown-menu rounded-3">
                                <li><a class="dropdown-item" href="#" onclick="savePost()"><i class="bi bi-bookmark me-2"></i>Lưu bài viết</a></li>
                                <li><a class="dropdown-item" href="#" onclick="muteNotifications()"><i class="bi bi-bell-slash me-2"></i>Tắt thông báo</a></li>
                                <li><a class="dropdown-item" href="#" onclick="reportPost()"><i class="bi bi-flag me-2"></i>Báo cáo bài viết</a></li>
                            </ul>
                        </div>
                    </div>
                    <p id="postTextContent" class="text-muted mb-3"></p>
                    <div id="postMediaGallery" class="media-gallery row g-2 mb-3"></div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex gap-2 align-items-center">
                            <i class="bi bi-heart-fill text-danger"></i>
                            <span id="postLikeCount" class="text-muted small"></span>
                        </div>
                        <div class="d-flex gap-2 align-items-center">
                            <span id="postCommentCount" class="text-muted small"></span>
                            <span id="postShareCount" class="text-muted small"></span>
                        </div>
                    </div>
                    <div class="d-flex gap-2 border-top pt-3 mb-3">
                        <button id="likeButton" class="btn btn-sm rounded-3 flex-fill btn-outline-soft"
                                style="--btn-color: #dc3545; --btn-hover: #f8d7da;"
                                onclick="toggleLike(this, 'post')">
                            <i class="bi bi-heart me-1"></i> Thích
                        </button>
                        <button class="btn btn-sm rounded-3 flex-fill btn-outline-soft"
                                style="--btn-color: #0dcaf0; --btn-hover: #e0f7fb;"
                                onclick="focusCommentInput()">
                            <i class="bi bi-chat-text me-1"></i> Bình luận
                        </button>
                        <button class="btn btn-sm rounded-3 flex-fill btn-outline-soft"
                                style="--btn-color: #198754; --btn-hover: #d1e7dd;"
                                onclick="sharePost()">
                            <i class="bi bi-share me-1"></i> Chia sẻ
                        </button>
                        <button class="btn btn-sm rounded-3 flex-fill btn-outline-soft"
                                style="--btn-color: #ffc107; --btn-hover: #fff8e3;"
                                onclick="bookmarkPost()">
                            <i class="bi bi-bookmark-fill me-1"></i> Yêu thích
                        </button>
                    </div>
                </div>
                <!-- Phần bình luận -->
                <div id="commentsSection" class="mt-3">
                    <div class="card card-body rounded-3">
                        <!-- Danh sách bình luận -->
                        <div id="commentsList" class="mb-3">
                            @if (Model != null)
                            {
                                foreach (var comment in Model)
                                {
                                    <div class="d-flex align-items-start mb-2">
                                        <img src="" alt="Avatar" class="rounded-circle me-2" style="width: 35px; height: 35px;">
                                        <div class="flex-grow-1">
                                            <p class="mb-0"><strong>@comment.FullName:</strong> @Html.Raw(comment.Content)</p>
                                            @if (!string.IsNullOrEmpty(comment.MediaUrl) && string.Equals(comment.MediaType, "Image", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <div class="mt-2">
                                                    <img src="/Post/ProxyImage?url=@(Uri.EscapeDataString(comment.MediaUrl))"
                                                         alt="@comment.FileName"
                                                         class="img-fluid rounded"
                                                         style="max-height: 100px; object-fit: cover;"
                                                         loading="lazy"
                                                         onerror="this.onerror=null; this.src='/images/fallback-image.jpg';" />
                                                </div>
                                            }
                                            <small class="text-muted">@comment.CommentDate?.ToString("dd/MM/yyyy")</small>
                                            <div class="d-flex gap-2 mt-1">
                                                <button class="btn btn-link p-0 text-muted small" style="text-decoration: none;">
                                                    <i class="bi bi-reply me-1"></i>Trả lời
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <!-- Nhập bình luận -->
                        <div class="comment-input-section">
                            <div class="d-flex align-items-center mb-2">
                                <div id="commentEditor" class="flex-grow-1 me-2" style="min-height: 38px;"></div>
                                <button id="submitComment" class="btn btn-primary btn-sm rounded-3" style="background-color: #0dcaf0; border-color: #0dcaf0;">
                                    <i class="bi bi-send-fill"></i> Gửi
                                </button>
                            </div>
                            <div class="d-flex gap-2">
                                <input type="file" id="commentImage" accept="image/*" class="d-none">
                                <div class="ql-toolbar ql-snow">
                                    <span class="ql-formats">
                                        <button class="ql-emoji" type="button"><i class="bi bi-emoji-smile"></i></button>
                                        <button class="ql-image" type="button"><i class="bi bi-image"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>